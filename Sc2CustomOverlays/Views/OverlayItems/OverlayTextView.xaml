<UserControl x:Class="Sc2CustomOverlays.Views.OverlayItems.OverlayTextView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:oivm="clr-namespace:Sc2CustomOverlays.ViewModel.OverlayItems"
             mc:Ignorable="d">
    <Label Margin="{Binding Path=Margin, UpdateSourceTrigger=PropertyChanged}"
           HorizontalAlignment="{Binding Path=HorizontalAlign, UpdateSourceTrigger=PropertyChanged}" 
           VerticalAlignment="{Binding Path=VerticalAlign, UpdateSourceTrigger=PropertyChanged}"
           
           HorizontalContentAlignment="{Binding Path=Justify, UpdateSourceTrigger=PropertyChanged}" 
           Width="{Binding Path=Width, UpdateSourceTrigger=PropertyChanged}"
           
           Content="{Binding Path=Text, UpdateSourceTrigger=PropertyChanged}"
           Foreground="{Binding Path=TextColor, UpdateSourceTrigger=PropertyChanged}"
           FontFamily="{Binding Path=FontFamily, UpdateSourceTrigger=PropertyChanged}"
           FontSize="{Binding Path=FontSize, UpdateSourceTrigger=PropertyChanged}"
           />
</UserControl>
