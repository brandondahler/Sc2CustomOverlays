<UserControl x:Class="Sc2CustomOverlays.Views.OverlayItems.OverlayImageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Image Margin="{Binding Path=Margin, UpdateSourceTrigger=PropertyChanged}"
           HorizontalAlignment="{Binding Path=HorizontalAlign, UpdateSourceTrigger=PropertyChanged}" 
           VerticalAlignment="{Binding Path=VerticalAlign, UpdateSourceTrigger=PropertyChanged}"
           
           Height="{Binding Path=Height, UpdateSourceTrigger=PropertyChanged}"
           Width="{Binding Path=Width, UpdateSourceTrigger=PropertyChanged}"
           
           
           Source="{Binding Path=ImageLocation, UpdateSourceTrigger=PropertyChanged}" 
           Stretch="{Binding Path=ImageStretch, UpdateSourceTrigger=PropertyChanged}" 
           
           />
</UserControl>
